.comment-box {
  margin: 50rpx 0;
}

.comment-top-title {
  width: 180rpx;
  height: 40rpx;
  line-height: 40rpx;
  margin: 0 auto;
  color: #111;
  font-size: 28rpx;
  position: relative;
  text-align: center;
  font-weight: bold;
}
.comment-top-title text{
  padding: 0 14rpx;
  background: #f6f6f6;
  position: relative;
}
.comment-top-title .line{
  content: '';
  position: absolute;
  height: 2rpx;
  background: #111;
  width: 100%;
  top: 0;
  bottom: 0;
  margin: auto;
}

.comment-line {
  background: #e4e4e4;
  width: 690rpx;
  height: 1px;
  margin: 0 auto;
}

.ci-box {
  padding: 30rpx;
  display: flex;
}

.ci-left {
  width: 70rpx;
}

.ci-left .ci-header {
  width: 70rpx;
  height: 70rpx;
  overflow: hidden;
  border-radius: 35rpx;
}

.ci-left .ci-header image {
  display: block;
  width: 100%;
  height: 100%;
}

.ci-right {
  flex: 1;
  box-sizing: border-box;
  padding-left: 14rpx;
}

.ci-info {
  height: 70rpx;
  margin-bottom: 13rpx;
}

.ci-info .ci-name {
  font-size: 28rpx;
  color: #4972a9;
  height: 28rpx;
  margin-bottom: 16rpx;
}

.ci-info .ci-des {
  font-size: 24rpx;
  color: #888;
  line-height: 24rpx;
}

.ci-content {
  font-size: 36rpx;
  color: #1a1a1a;
  line-height: 50rpx;
  text-align: justify;
}

.ci-reply {
  display: inline;
  color: #888;
}

.ci-reply .ci-reply-name {
  color: #4972a9;
}

.ci-reply-media {
  padding: 20rpx;
  position: relative;
  margin-top: 23rpx;
  background: #ededed;
}

.ci-reply-media::before {
  content: "";
  position: absolute;
  top: -10rpx;
  left: 0;
  width: 0;
  height: 0;
  border-bottom: 15rpx solid #ededed;
  border-right: 15rpx solid transparent;
}

.ci-reply-name-media {
  font-size: 28rpx;
  color: #4972a9;
  height: 28rpx;
  margin-bottom: 13rpx;
}

.ci-reply-content-media {
  font-size: 36rpx;
  color: #1a1a1a;
  line-height: 50rpx;
  text-align: justify;
}

.ci-img {
  height: 150rpx;
  width: 226rpx;
  margin-top: 25rpx;
  background: #ececec url(http://mat1.gtimg.com/www/images/newsapp/wxapp/kuaibao/holder_bigpic.png) center no-repeat;
  background-size: 95rpx 50rpx;
}

.ci-img image {
  display: block;
  height: 100%;
  width: 100%;
}

.ci-img-reply {
  display: inline-block;
  height: 40rpx;
  color: #4972a9;
  font-size: 26rpx;
  line-height: 40rpx;
  padding: 0 20rpx 0 55rpx;
  background: #ededed url(http://mat1.gtimg.com/www/images/newsapp/wxapp/kuaibao/comment_photo_small_blue.png) 20rpx center no-repeat;
  background-size: 25rpx;
  border-radius: 20rpx;
  margin-top: 20rpx;
}

.no-comment, .forbidden-comment {
  padding: 30rpx;
}

.no-comment image, .forbidden-comment image {
  height: 330rpx;
  width: 330rpx;
  margin: 0 auto 55rpx auto;
  display: block;
}

.comment-ext-line1 {
  margin: 30rpx 0;
  text-align: center;
  font-size: 40rpx;
  color: #000;
  height: 40rpx;
}

.comment-ext-line2 {
  margin: 30rpx 0;
  text-align: center;
  font-size: 30rpx;
  color: #888;
  height: 30rpx;
}

.ci-blur-box {
  position: fixed;
  height: 90rpx;
  width: 100%;
  bottom: 0;
  background: #f8f8f8;
  display: flex;
}

.ci-blur-box .ci-blur-input {
  flex: 1;
  padding: 12rpx 30rpx;
  box-sizing: border-box;
}

.ci-blur-box .ci-blur-input text {
  display: block;
  background: #fff;
  border: 1rpx solid #e4e4e4;
  border-radius: 8rpx;
  height: 66rpx;
  line-height: 64rpx;
  box-sizing: border-box;
  font-size: 30rpx;
  color: #999;
  padding-left: 24rpx;
}

.ci-blur-box .ci-blur-comment-num {
  width: 130rpx;
  padding-top: 21.5rpx;
}

.ci-blur-box .ci-blur-comment-num text {
  position: relative;
  display: inline-block;
  margin-left: 10rpx;
  padding: 0 10rpx;
  background: #e94221;
  border-radius: 4px;
  height: 47rpx;
  font-size: 26rpx;
  color: #fff;
  line-height: 47rpx;
  text-align: center;
}

.ci-blur-box .ci-blur-comment-num text::before {
  content: "";
  position: absolute;
  bottom: -5rpx;
  left: 0;
  width: 0;
  height: 0;
  border-top: 12rpx solid #e94221;
  border-right: 12rpx solid transparent;
}

#ci-input-wrap {
  position: fixed;
  height: 100%;
  width: 100%;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 999;
}

.ci-input-box {
  position: fixed;
  height: 300rpx;
  bottom: 200rpx;
  width: 100%;
  background: #f6f6f6;
  padding: 30rpx;
  box-sizing: border-box;
  /*top: 0;
  margin: auto;*/
}

#ci-input {
  display: block;
  box-sizing: border-box;
  background: #fff;
  border: 1rpx solid #e4e4e4;
  border-radius: 8rpx;
  height: 144rpx;
  width: 690rpx;
  margin-bottom: 30rpx;
  padding: 20rpx;
  font-size:30rpx;
  color:#1a1a1a;
}

.ci-input-bottom {
  height: 64rpx;
  width: 690rpx;
}

#pub-comment-btn {
  display: inline-block;
  float: right;
  height: 64rpx;
  line-height: 64rpx;
  background: #e4e4e4;
  border-radius: 8rpx;
  font-size: 30rpx;
  color: #9d9d9d;
  border:none;
}
